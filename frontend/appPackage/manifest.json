{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.15/MicrosoftTeams.schema.json",
    "manifestVersion": "1.15",
    "version": "1.1.1",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension",
    "developer": {
        "name": "Teams App, Inc.",
        "websiteUrl": "${{TAB_ENDPOINT}}",
        "privacyUrl": "${{TAB_ENDPOINT}}/index.html#/privacy",
        "termsOfUseUrl": "${{TAB_ENDPOINT}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "BizCard.png",
        "outline": "BizCardOutline.png"
    },
    "name": {
        "short": "BizCard",
        "full": "BizCard"
    },
    "description": {
        "short": "포스코 인터내셔널 직원분들을 위한 명함 관리 APP",
        "full": "본 어플은 포스코 인터내셔널 직원분들을 위한 명함 관리 APP으로써, SSAFY에서 제작하였습니다."
    },
    "accentColor": "#FFFFFF",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "https://${{TAB_DOMAIN}}/configure",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ],
            "context": [
                "meetingSidePanel",
                "meetingStage",
                "meetingDetailsTab",
                "meetingChatTab"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "myCard",
            "name": "내 명함",
            "contentUrl": "${{TAB_ENDPOINT}}/index.html#",
            "websiteUrl": "${{TAB_ENDPOINT}}/index.html#",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "myAlbum",
            "name": "명함 지갑",
            "contentUrl": "${{TAB_ENDPOINT}}/index.html#/myAlbum",
            "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/myAlbum",
            "scopes": [
                "personal"
            ]
        },
        {
            "entityId": "myTeam",
            "name": "팀 명함",
            "contentUrl": "${{TAB_ENDPOINT}}/index.html#/myTeam",
            "websiteUrl": "${{TAB_ENDPOINT}}/index.html#/myTeam",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}"
    ],
    "webApplicationInfo": {
        "id": "${{AAD_APP_CLIENT_ID}}",
        "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
    }
}